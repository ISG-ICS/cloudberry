# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# index routes
GET        /                                    controllers.Cloudberry.index
GET        /ws                                  controllers.Cloudberry.ws
POST       /webregister                         controllers.Cloudberry.webRegister
POST       /berry                               controllers.Cloudberry.berryQuery
POST       /admin/register                      controllers.Cloudberry.register
POST       /admin/deregister                    controllers.Cloudberry.deregister

# TwitterMap routes
GET        /twittermap                          controllers.TwitterMapApplication.index
GET        /debug                               controllers.TwitterMapApplication.debug
GET        /tweet/:id                           controllers.TwitterMapApplication.tweet(id: String)

GET        /city/:neLat/:swLat/:neLng/:swLng    controllers.TwitterMapApplication.getCity(neLat: Double, swLat: Double, neLng: Double, swLng: Double)

# Dashboard experiment
GET        /dashboard                           controllers.DashboardApplication.index

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                        controllers.Assets.versioned(path="/public", file: Asset)
GET        /favicon.ico                         controllers.Assets.at(path="/public/images", file="favicon.ico")