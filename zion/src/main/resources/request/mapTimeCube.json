{
  "source" : "twitter.ds_tweet",
  "filter": [
    {
      "field" : "geo_tag.stateID",
      "relation" : "in",
      "values" : [1,2,3,31]
    },
    {
      "field" : "create_at",
      "relation" : "inRange",
      "values" : ["2012", "2016"]
    },
    {
      "field" : "text",
      "relation" : "contains",
      "values" : ["zika", "virus"]
    }
  ],
  "group": {
    "by": [
      {
        "field": "geo",
        "apply": "stateID",
        "as" : "state"
      },
      {
        "field" : "create_at",
        "apply" : "hour",
        "as" : "hour"
      }
    ],
    "summarize": [
      {
        "field": "*",
        "apply": "count",
        "as" : "count"
      },
      {
        "field" : "hashTags",
        "apply" : {
          "name": "topK",
          "args": [10]
        },
        "as" : "top10_hash"
      },
      {
        "field" : "lang",
        "apply" : {
          "name": "topK",
          "args": [10]
        },
        "as" : "top10_lang"
      }
    ]
  }
}

