{
  "source" : "twitter.ds_tweet",
  "filter": [
    {
      "field" : "geo.stateID",
      "relation" : "in",
      "values" : [1,2,3,31]
    },
    {
      "field" : "create_at",
      "relation" : "inRange",
      "values" : ["2012", "2016"]
    },
    {
      "field" : "text",
      "relation" : "in",
      "values" : ["zika", "virus"]
    }
  ],
  "group": {
    "by": [
      {
        "field": "geo",
        "apply": "state",
        "as": "stateID"
      },
      {
        "field" : "create_at",
        "apply" : "hour",
        "as" : "time"
      }
    ],
    "summarize": [
      {
        "field": "*",
        "apply": "count",
        "as" : "count"
      }
    ]
  }
}

